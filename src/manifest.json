{
    "manifest_version": 3,
    "name": "Hermes",
    "version": "0.1",
    "description": "Lighweight chrome extension to enhance the github experience",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Hermes",
        "default_popup": "popup/index.html"
    },
    "options_page": "options/index.html",
    "permissions":["storage", "scripting", "tabs"],
    "host_permissions": [
        "*://github.com/*"
    ],
    "background": {
        "service_worker": "./background/worker.ts",
        "type": "module"
    },
    "content_scripts": [{
        "js": ["./content/script.ts"],
        "matches": ["*://github.com/*"]
    }]
}
